{
  "name": "astro-journey",
  "version": "0.1.2",
  "description": "A minimal, data-driven timeline component for Astro. Perfect for personal portfolios, changelogs, and career journeys.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./Timeline.astro": "./src/Timeline.astro",
    "./TimelineItem.astro": "./src/TimelineItem.astro",
    "./styles.css": "./src/styles.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "astro",
    "astro-component",
    "timeline",
    "changelog",
    "portfolio",
    "career",
    "journey"
  ],
  "author": "Ray Lu",
  "license": "MIT",
  "peerDependencies": {
    "astro": ">=4.0.0"
  },
  "devDependencies": {
    "astro": "^5.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.17"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raylu/astro-journey.git"
  },
  "bugs": {
    "url": "https://github.com/raylu/astro-journey/issues"
  },
  "homepage": "https://github.com/raylu/astro-journey#readme",
  "dependencies": {
    "dayjs": "^1.11.19"
  }
}
